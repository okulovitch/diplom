                android:layout_margin="12dp"
                android:layout_toEndOf="@id/markerIv"/>


            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_margin="12dp"
                android:layout_height="250dp">
            </com.google.android.gms.maps.MapView>


