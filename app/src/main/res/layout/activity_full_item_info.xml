        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/depurple_dark">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:background="@drawable/depurple_rounded_sqare_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/hotelNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="16dp"
                android:text="Hotel name"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/emailTv"
                android:text="email:"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotelNameTv"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/emailEnterTextTv"
                android:text=""
                android:layout_toEndOf="@id/emailTv"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotelNameTv"/>

            <TextView
                android:id="@+id/phoneTv"
                android:text="phone number:"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTv"/>

            <TextView
